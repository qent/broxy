{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://io.qent.broxy/schemas/preset.schema.json",
  "title": "Preset Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "tools"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "tools": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ToolReference"
      }
    },
    "prompts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PromptReference"
      },
      "default": []
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ResourceReference"
      },
      "default": []
    },
    "createdAtEpochMillis": {
      "type": "integer",
      "minimum": 0
    }
  },
  "definitions": {
    "ToolReference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "serverId",
        "toolName",
        "enabled"
      ],
      "properties": {
        "serverId": {
          "type": "string",
          "minLength": 1
        },
        "toolName": {
          "type": "string",
          "minLength": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "PromptReference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "serverId",
        "promptName",
        "enabled"
      ],
      "properties": {
        "serverId": {
          "type": "string",
          "minLength": 1
        },
        "promptName": {
          "type": "string",
          "minLength": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "ResourceReference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "serverId",
        "resourceKey",
        "enabled"
      ],
      "properties": {
        "serverId": {
          "type": "string",
          "minLength": 1
        },
        "resourceKey": {
          "type": "string",
          "minLength": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}
